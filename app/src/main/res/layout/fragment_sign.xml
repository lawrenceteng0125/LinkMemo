<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignFragment">

    <TextView
        android:id="@+id/signTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="48dp"
        android:text="用户注册"
        android:textStyle="bold"
        android:textSize="48dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/signNameEditText"
        app:layout_constraintLeft_toLeftOf="@id/signNameEditText"
        android:layout_marginBottom="4dp"
        android:text="创建由5～15个字符组成的用户名"/>

    <EditText
        android:id="@+id/signNameEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/signTxt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="48dp"
        android:ems="13"
        android:padding="14dp"
        android:textStyle="bold"
        android:inputType="text"
        android:hint="输入用户名"
        android:textAlignment="center"
        android:background="@drawable/round_ed_style"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/signPwdEditText1"
        app:layout_constraintLeft_toLeftOf="@id/signNameEditText"
        android:layout_marginBottom="4dp"
        android:text="创建密码"/>

    <EditText
        android:id="@+id/signPwdEditText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/signNameEditText"
        app:layout_constraintLeft_toLeftOf="@id/signNameEditText"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="0dp"
        android:ems="13"
        android:padding="14dp"
        android:textStyle="bold"
        android:inputType="textPassword"
        android:hint="输入密码"
        android:textAlignment="center"
        android:background="@drawable/round_ed_style"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/signPwdEditText2"
        app:layout_constraintLeft_toLeftOf="@id/signNameEditText"
        android:layout_marginBottom="4dp"
        android:text="确认密码"/>

    <EditText
        android:id="@+id/signPwdEditText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/signPwdEditText1"
        app:layout_constraintLeft_toLeftOf="@id/signPwdEditText1"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="0dp"
        android:ems="13"
        android:padding="14dp"
        android:textStyle="bold"
        android:inputType="textPassword"
        android:hint="再次输入密码"
        android:textAlignment="center"
        android:background="@drawable/round_ed_style"/>

    <Button android:id="@+id/btnSignIn"
        android:layout_width="128dp"
        android:layout_height="64dp"
        app:layout_constraintTop_toBottomOf="@id/signPwdEditText2"
        app:layout_constraintRight_toRightOf="@id/signPwdEditText2"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="0dp"
        android:textSize="18dp"
        android:textStyle="bold"
        android:text="注册"/>
    <Button android:id="@+id/btnCancelSign"
        android:layout_width="128dp"
        android:layout_height="64dp"
        app:layout_constraintTop_toBottomOf="@id/signPwdEditText2"
        app:layout_constraintLeft_toLeftOf="@id/signPwdEditText2"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="0dp"
        android:textSize="18dp"
        android:textStyle="bold"
        android:text="取消"/>
    <View
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="0dp"
        android:background="@drawable/wave_1"/>

</androidx.constraintlayout.widget.ConstraintLayout>