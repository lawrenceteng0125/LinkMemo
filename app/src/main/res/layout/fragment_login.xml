<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginFragment">

    <View
        android:id="@+id/topView"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="0dp"
        android:background="@drawable/wave_2"/>

    <TextView
        android:id="@+id/welcomeTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/topView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="0dp"
        android:text="Welcome"
        android:textStyle="bold"
        android:textSize="64dp"/>


    <EditText
        android:id="@+id/usernameEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/welcomeTxt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="44dp"
        android:ems="13"
        android:padding="14dp"
        android:textStyle="bold"
        android:inputType="text"
        android:hint="用户名"
        android:textAlignment="center"
        android:background="@drawable/round_ed_style"/>

    <EditText
        android:id="@+id/passwordEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/usernameEditText"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="22dp"
        android:ems="13"
        android:padding="14dp"
        android:textStyle="bold"
        android:inputType="textPassword"
        android:hint="密码"
        android:textAlignment="center"
        android:background="@drawable/round_ed_style"/>

    <Button android:id="@+id/btnLogin"
        android:layout_width="128dp"
        android:layout_height="64dp"
        app:layout_constraintTop_toBottomOf="@id/passwordEditText"
        app:layout_constraintRight_toRightOf="@id/usernameEditText"
        android:layout_marginTop="22dp"
        android:layout_marginRight="0dp"
        android:textSize="18dp"
        android:textStyle="bold"
        android:text="登录"/>

    <Button android:id="@+id/btnToSignIn"
        android:layout_width="128dp"
        android:layout_height="64dp"
        app:layout_constraintTop_toBottomOf="@id/passwordEditText"
        app:layout_constraintLeft_toLeftOf="@id/usernameEditText"
        android:layout_marginTop="22dp"
        android:layout_marginLeft="0dp"
        android:textSize="18dp"
        android:textStyle="bold"
        android:text="注册"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="0dp"
        android:background="@drawable/wave_1"/>

</androidx.constraintlayout.widget.ConstraintLayout>